<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:simpleType name="CapsLockToggleModeEnumeration">
		<xs:restriction base="xs:string">
			<xs:enumeration value="normal" />
			<xs:enumeration value="pressTwice" />
			<xs:enumeration value="disabled" />
		</xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="CapsLockSwapModeEnumeration">
		<xs:restriction base="xs:string">
			<xs:enumeration value="swap" />
			<xs:enumeration value="replace" />
		</xs:restriction>
	</xs:simpleType>
	<xs:element name="FcConfiguration">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="SyntaxVersion" type="xs:unsignedInt" default="1" />
				<xs:element name="Options">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="Startup">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="StartActive" type="xs:boolean" />
										<xs:element name="StartWithWindows" type="xs:boolean" />
									</xs:sequence>
								</xs:complexType>
							</xs:element>
							<xs:element name="Keyboard">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="SwapCapsLock" type="xs:boolean" />
										<xs:element name="CapsLockToggleMode" type="CapsLockToggleModeEnumeration" />
										<xs:element name="CapsLockSwapMode" type="CapsLockSwapModeEnumeration" />
										<xs:element name="ComposeKey" type="xs:unsignedByte" />
										<xs:element name="SwapCapsLockKey" type="xs:unsignedByte" />
									</xs:sequence>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
				<xs:element name="Mappings">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="Group" minOccurs="0" maxOccurs="unbounded">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="Mapping" minOccurs="0" maxOccurs="unbounded">
											<xs:complexType>
												<xs:sequence>
													<xs:element name="Sequence" type="xs:string" />
													<xs:element name="Result" type="xs:string" />
												</xs:sequence>
												<xs:attribute name="Disabled" type="xs:boolean" use="optional" />
												<xs:attribute name="CaseInsensitive" type="xs:boolean" use="optional" />
												<xs:attribute name="Reversible" type="xs:boolean" use="optional" />
											</xs:complexType>
										</xs:element>
									</xs:sequence>
									<xs:attribute name="Name" type="xs:string" use="required" />
								</xs:complexType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
