<Page x:Class="NewFrontEnd.KeySequences"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <ListView Name="listView" ItemsSource="{Binding KeySequenceCollection}">
            <ListView.View>
                <GridView RenderOptions.ClearTypeHint="Enabled">
                    <GridViewColumn Header="Character" Width="Auto" DisplayMemberBinding="{Binding u32Composed}" />
                    <GridViewColumn Header="First key" Width="Auto" DisplayMemberBinding="{Binding vkFirst}" />
                    <GridViewColumn Header="Second key" Width="Auto" DisplayMemberBinding="{Binding vkSecond}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
